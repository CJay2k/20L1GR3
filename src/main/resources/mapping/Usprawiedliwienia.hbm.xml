<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="mapping.Usprawiedliwienia" table="usprawiedliwienia" catalog="dziennik_elektroniczny" optimistic-lock="version">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="increment">
                <param name="property">id</param>
            </generator>
        </id>
        <one-to-one name="obecnosc" class="mapping.Obecnosc" fetch="select"/>
        <many-to-one name="uczen" class="mapping.Uczen" fetch="select">
            <column name="uczen" length="11"/>
        </many-to-one>
        <property name="data" type="date">
            <column name="data"/>
        </property>
        <property name="godzina" type="time">
            <column name="godzina"/>
        </property>
        <property name="tresc" type="java.lang.String">
            <column name="tresc"/>
        </property>
    </class>
</hibernate-mapping>
